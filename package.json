{
  "name": "@0xpolygonid/billions-js-sdk",
  "version": "1.0.0",
  "description": "Billions Agent JS-SDK. Decentralized identity for agents",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/node/esm/index.js",
        "require": "./dist/node/cjs/index.cjs"
      },
      "types": "./dist/types/index.d.ts"
    }
  },
  "type": "module",
  "sideEffects": false,
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsup && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "test": "vitest run --bail=1",
    "lint": "eslint --fix src tests",
    "lint:check": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --check",
    "watch": "tsc --watch",
    "start": "node --env-file=.env --import tsx ./src/backend/server.ts",
    "attest:agent": "node --env-file=.env --import tsx ./scripts/attestAgent.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xPolygonID/billions-agent-js-sdk.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/0xPolygonID/billions-agent-js-sdk/issues"
  },
  "homepage": "https://github.com/0xPolygonID/billions-agent-js-sdk#readme",
  "dependencies": {
    "@0xpolygonid/js-sdk": "^1.37.0",
    "@langchain/anthropic": "^0.3.30",
    "@langchain/core": "^0.3.78",
    "@langchain/google-genai": "^0.2.18",
    "@langchain/langgraph": "^0.2.21",
    "@langchain/mistralai": "^0.2.3",
    "@langchain/openai": "^0.3.14",
    "cors": "^2.8.5",
    "did-resolver": "4.1.0",
    "dotenv": "^16.4.7",
    "ethers": "npm:ethers@^6.15.0",
    "ethers5": "npm:ethers@^5.7.0",
    "express": "^5.1.0",
    "log-timestamp": "^0.3.0",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "axios": "^1.13.1",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "@iden3/js-crypto": "1.3.2",
    "@iden3/js-iden3-core": "1.7.1",
    "@iden3/js-jwz": "1.12.1"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "8.19.4",
    "@iden3/eslint-config": "https://github.com/iden3/eslint-config",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jsonld": "^1.5.11",
    "@types/node": "^20.8.9",
    "@types/pubsub-js": "^1.8.6",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.0",
    "tsx": "^4.6.2",
    "typescript": "^5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "private": true,
  "overrides": {
    "ws": "^8.17.1"
  }
}
